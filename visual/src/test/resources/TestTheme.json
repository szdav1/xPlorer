{
	"XButton": {
		"background": {
			"normal":  ["#FF0000"],
			"hovered": ["#00FF00"],
			"clicked": ["#0000FF"],
			"direction": "left_to_right"
		},
		"foreground": {
			"normal":  ["#000FFF"],
			"hovered": ["#000FFF", "#000000"],
			"clicked": ["#000FFF"],
			"direction": "diagonal_bottom_to_left"
		},
		"border": {
			"foreground": {
				"normal":  ["#0000FF"],
				"hovered": ["#00FF00"],
				"clicked": ["#FF0000"],
				"direction": "diagonal_bottom_to_left"
			},
			"size": 5,
			"radius": 10,
			"scaling": "absolute"
		},
		"font": {
			"normal": {
				"family": "Comic Sans",
				"ligature": "normal",
				"size": 5,
				"scaling": "relative"
			},
			"hovered": {
				"family": "Comic Sans",
				"ligature": "bold",
				"size": 5,
				"scaling": "absolute"
			},
			"clicked": {
				"family": "Comic Sans",
				"ligature": "italic",
				"size": 15,
				"scaling": "relative"
			}
		},
		"icon": {
			"normal": {
				"src": "/icons/normal.png",
				"size": [500, 500],
				"scaling": "absolute"
			},
			"hovered": {
				"src": "/icons/hovered.png",
				"size": [200, 500],
				"scaling": "relative"
			},
			"clicked": {
				"src": "/icons/clicked.png",
				"size": [500, 300],
				"scaling": "absolute"
			}
		}
	}
}